<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvNombreRama"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nombre de Rama"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/btnVerTemas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list"
            android:contentDescription="Ver temas"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/blue_primary"/>

        <ImageButton
            android:id="@+id/btnEditarRama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:contentDescription="Editar rama"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/blue_primary" />

        <ImageButton
            android:id="@+id/btnEliminarRama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:contentDescription="Eliminar rama"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/red_dark" />
        <ImageButton
            android:id="@+id/btnHistorialRama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Historial de la Rama"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_history"
            app:tint="?attr/colorPrimary"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>