<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa base: fondo blanco -->
    <item>
        <color android:color="@android:color/white"/>
    </item>

    <!-- Curva decorativa superior izquierda -->
    <item
        android:top="-200dp"
        android:left="-200dp"
        android:right="200dp"
        android:bottom="350dp">
        <shape android:shape="oval">
            <solid android:color="#2C3E50"/> <!-- Azul oscuro -->
        </shape>
    </item>

    <!-- Curva decorativa inferior derecha -->
    <item
        android:top="300dp"
        android:left="300dp"
        android:right="-200dp"
        android:bottom="-305dp">
        <shape android:shape="oval">
            <solid android:color="#0D47A1"/> <!-- Azul fuerte -->
        </shape>
    </item>

</layer-list>